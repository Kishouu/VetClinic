generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  login        String        @unique
  password     String
  appointments Appointment[]
  pets         Pet[]
  receipts     Receipt[]
}

model Pet {
  id           Int           @id @default(autoincrement())
  name         String
  species      String
  userId       Int
  appointments Appointment[]
  user         User          @relation(fields: [userId], references: [id])
}

model Doctor {
  id           Int           @id @default(autoincrement())
  login        String        @unique
  password     String
  appointments Appointment[]
  receipts     Receipt[]
  services     Service[]
}

model Appointment {
  id       Int      @id @default(autoincrement())
  userId   Int
  doctorId Int
  date     DateTime
  notes    String?
  petId    Int
  doctor   Doctor   @relation(fields: [doctorId], references: [id])
  pet      Pet      @relation(fields: [petId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Receipt {
  id       Int      @id @default(autoincrement())
  userId   Int
  doctorId Int
  amount   Float
  date     DateTime
  doctor   Doctor   @relation(fields: [doctorId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Service {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  doctorId Int
  doctor   Doctor @relation(fields: [doctorId], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String
}
