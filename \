import React, { useState } from 'react';
import axios from 'axios';
import '../components/UI/AppointmentForm.css'; // Import your CSS file

export default function AppointmentForm({ token }) {
  const [date, setDate] = useState('');
  const [time, setTime] = useState('');
  const [petName, setPetName] = useState('');
  const [species, setSpecies] = useState('');
  const [serviceId, setServiceId] = useState('');
  const [doctor, setDoctor] = useState('');
  const [error, setError] = useState('');
  const [success, setSuccess] = useState('');

  const handleSubmit = async (e) => {
    e.preventDefault();
    setError('');
    setSuccess('');

    if (!date || !time || !petName || !species || !serviceId || !doctor) {
      setError('All fields are required');
      return;
    }

    const dateTime = new Date(`${date}T${time}`);

    try {
      const res = await axios.post(
        '/api/appointment',
        {
          date: dateTime.toISOString(),
          petName,
          species,
          serviceId: parseInt(serviceId),
          doctorId: parseInt(doctor),
        },
        { headers: { Authorization: `Bearer ${token}` } }
      );
      setSuccess('Appointment created successfully!');
      setDate('');
      setTime('');
      setPetName('');
      setSpecies('');
      setServiceId('');
      setDoctor('');
    } catch (err) {
      setError(err.response?.data?.error || 'Failed to create appointment');
    }
  };

  return (
    <form className="appointment-form" onSubmit={handleSubmit}>
      {error && <p className="error-msg">{error}</p>}
      {success && <p className="success-msg">{success}</p>}

      <select
        value={petName}
        onChange={(e) => setPetName(e.target.value)}
        className="appointment-input"
        required
      >
        <option value="">Select Pet</option>
        <option value="Fluffy">Fluffy</option>
        <option value="Milo">Milo</option>
      </select>

      <select
        value={serviceId}
        onChange={(e) => setServiceId(e.target.value)}
        className="appointment-input"
        required
      >
        <option value="">Select Service</option>
        <option value="1">Vaccination</option>
        <option value="2">Surgery</option>
      </select>

      <input
        type="date"
        value={date}
        onChange={(e) => setDate(e.target.value)}
        className="appointment-input"
        required
      />

      <input
        type="time"
        value={time}
        onChange={(e) => setTime(e.target.value)}
        className="appointment-input"
        required
      />

      <select
        value={doctor}
        onChange={(e) => setDoctor(e.target.value)}
        className="appointment-input"
        required
      >
        <option value="">Select Doctor</option>
        <option value="1">Dr. Smith</option>
        <option value="2">Dr. Jane</option>
      </select>

      <button type="submit" className="appointment-button">
        Book Appointment
      </button>
    </form>
  );
}

